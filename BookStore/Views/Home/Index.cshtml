            {
            <button type="button"
            onclick="add(@book.Id)"
            class="btn btn-primary">
            Thêm vào giỏ hàng
            </button>
            }
            else
            {
            <span style="border: 1px solid; padding: 6px 8px; color: orange; border-radius: 6px">Không còn hàng</span>
            } *@
            </div>
        </div>
    }
</div>